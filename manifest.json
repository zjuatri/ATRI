{
  "manifest_version": 3,
  "name": "ZhiHuiShu Extension",
  "version": "1.0.0",
  "description": "智慧树浏览器插件",
  "icons": {
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "64": "icons/64.png",
      "128": "icons/128.png",
      "256": "icons/256.png",
      "512": "icons/512.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://studywisdomh5.zhihuishu.com/*",
        "https://fusioncourseh5.zhihuishu.com/*"
      ],
      "js": [
        "content/interceptor.js",
        "content/utils.js",
        "content/ui.js",
        "content/auto-answer.js",
        "content/page-handlers.js",
        "content/content-main.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage", "activeTab", "webRequest", "downloads"],
  "host_permissions": [
    "https://studywisdomh5.zhihuishu.com/*",
    "https://fusioncourseh5.zhihuishu.com/*",
    "https://aistudy.zhihuishu.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/page-interceptor.js"],
      "matches": [
        "https://studywisdomh5.zhihuishu.com/*",
        "https://fusioncourseh5.zhihuishu.com/*"
      ]
    }
  ]
}
