{
  "manifest_version": 3,
  "name": "ZhiHuiShu Extension",
  "version": "1.0.0",
  "description": "智慧树浏览器插件",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://studywisdomh5.zhihuishu.com/*"],
      "js": ["content/interceptor.js", "content/content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "downloads"
  ],
  "host_permissions": [
    "https://studywisdomh5.zhihuishu.com/*",
    "https://aistudy.zhihuishu.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/page-interceptor.js"],
      "matches": ["https://studywisdomh5.zhihuishu.com/*"]
    }
  ]
}
